{% if result.ITEMS is not empty %}
    <section class="sale-catalogue">
        <div class="sale-catlogue-wrap">
            <div class="sale-catalogue__title">Распродажа:</div>

            <a href="#" class="pdf-download" download>
                <span class="pdf-download__ico">
                    <svg width="12" height="16" viewBox="0 0 12 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M0.5 16C0.367392 16 0.240215 15.9473 0.146447 15.8536C0.0526784 15.7598 0 15.6326 0 15.5V0.5C0 0.367392 0.0526784 0.240215 0.146447 0.146447C0.240215 0.0526784 0.367392 0 0.5 0L6.79 0C6.92188 0.00187852 7.04768 0.0557929 7.14 0.15L11.85 4.86C11.9442 4.95232 11.9981 5.07812 12 5.21V15.5C12 15.6326 11.9473 15.7598 11.8536 15.8536C11.7598 15.9473 11.6326 16 11.5 16H0.5ZM7 4.75C7 4.8163 7.02634 4.87989 7.07322 4.92678C7.12011 4.97366 7.1837 5 7.25 5H10.5L7 1.5V4.75Z"
                          fill="white"/>
                    </svg>
                </span>

                Скачать PDF-документ
            </a>
        </div>

        <div class="js-sale-slider sale-catalogue__slider sale-slider-view">
            {% for item in result.ITEMS %}
                {{ AddBitrixActions(item) }}
                <div class="item" id="{{ GetEditAreaId(item) }}">
                    <a href="#{{ item.PROPERTIES.POPUP.VALUE }}" class="sale-catalogue__item js-open-modal" title="">
                        <img class="sale-catalogue__item__pic"
                             src="{{ item.PREVIEW_PICTURE.SRC }}"
                             alt="{{ item.NAME }}">
                        <h2 class="sale-catalogue__item__title">
                            {{ item.NAME }} <div class="sale-catalogue__item__remainder">{{ item.PROPERTIES.NAME_2.VALUE }}</div>
                        </h2>
                    </a>
                </div>
            {% endfor %}
        </div>
        <div class="sale-catalog__more js_sale-catalog-btn">
            <svg width="18" height="19" viewBox="0 0 18 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M6.65956 12.9636C9.42643 12.6714 11.6439 10.5868 11.9594 7.97901C12.3736 4.56923 9.56167 1.66667 6.03688 1.62949V0.0998641C6.03688 0.0148851 5.92418 -0.03026 5.8481 0.0228519L2.50646 2.33587C2.4501 2.37571 2.4501 2.45272 2.50646 2.49255L5.8481 4.80558C5.92418 4.85869 6.03688 4.81089 6.03688 4.72857V3.2016C8.51353 3.23878 10.4971 5.22516 10.3281 7.59926C10.1844 9.64142 8.41773 11.2985 6.25102 11.4286C3.95469 11.5667 2.00211 10.0212 1.65273 7.97636C1.58793 7.59661 1.23573 7.32043 0.829998 7.32043C0.325651 7.32043 -0.0688095 7.74267 0.0100827 8.21271C0.500341 11.1259 3.35455 13.3114 6.65956 12.9636Z"
                      transform="translate(0.160156 9.14624) rotate(-45)" fill="#E51F20"/>
            </svg>
            Показать еще
        </div>
    </section>
{% endif %}