<section class="stage-prod">
    <div class="stage-prod__title">{{ group.NAME }}:</div>
    <div class="row">
        {% for item in group.ITEMS %}
        {{ AddBitrixActions(item) }}
        <div class="col-lg-4" id="{{ GetEditAreaId(item) }}">
            <div class="stage-prod__item">
                <div class="stage-prod__item__header">
                    <img src="{{ item.PREVIEW_PICTURE.SRC }}"
                         alt="{{ item.PREVIEW_PICTURE.ALT }}">
                    <div class="title">{{ item.NAME }}</div>
                </div>
                {% if item.PREVIEW_TEXT %}
                    <div class="stage-prod__item__content">
                        {{ item.PREVIEW_TEXT }}
                    </div>
                {% endif %}
            </div>
        </div>
        {% endfor %}
    </div>
</section>